# I, Jester, hereby release this work, except as stated otherwise, into the public domain.

ENV=$(shell uname)

IDIR=inc
LDIR=lib
ifeq ($(ENV), Linux)
    LDIR=lib/deb
else
    LDIR=lib/win64
endif
SDIR=src
ODIR=obj

CXX=g++
CXXFLAGS=-std=c++11 -Wall -Wpedantic -I$(IDIR)
LFLAGS=-L$(LDIR)
ifeq ($(ENV), Linux)
    LFLAGS+=-lm -lXrandr -lGL -lGLU -lX11 -lfreeglut
else
    LFLAGS+=-lopengl32 -lglu32 -lfreeglut #-Wl,--subsystem,windows
endif

_DEPS=Main.h GLUTWindow.h
DEPS=$(patsubst %,$(SDIR)/%,$(_DEPS))

_OBJ=Main.o GLUTWindow.o
OBJ=$(patsubst %,$(ODIR)/%,$(_OBJ))

NAME=JFVGL_glut

$(ODIR)/%.o: $(SDIR)/%.cpp $(DEPS)
	$(CXX) $(CXXFLAGS) -c $< -o$@

all: $(OBJ)
	$(CXX) -o$(NAME) $^ $(LFLAGS)

clean:
	rm -f $(NAME)
	rm -r -f obj
	mkdir obj
